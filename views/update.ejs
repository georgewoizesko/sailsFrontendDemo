<%- partial ('partials/statusmessage.ejs') %>
<h2>Car Inventory</h2>
<table class="table table-striped table-bordered">
  <tr>
    <th>ID</th>
    <th>Year</th>
    <th>Make</th>
    <th>Model</th>
    <th>Engine</th>
    <th>Mileage</th>
    <th>Color</th>
    <th>VIN</th>
    <th>Condition</th>
    <th>Stock Number</th>
    <th>Intake Date</th>
  </tr>
  <% if(typeof cars != "undefined" && cars.length > 0){ %>
    <% cars.forEach(function(cars){ %>
      <tr>
        <td><%= cars.id %></td>
        <td><%= cars.year %></td>
        <td><%= cars.make %></td>
        <td><%= cars.model %></td>
        <td><%= cars.engine %></td>
        <td><%= cars.mileage %></td>
        <td><%= cars.color %></td>
        <td><%= cars.vin %></td>
        <td><%= cars.condition %></td>
        <td><%= cars.stockNumber %></td>
        <td><%= cars.intakeDate %></td>
      </tr>
    <% }) %>
  <% }else{ %>
      <tr>
        <td colspan="10">0 records found</td>
      </tr>
  <% } %>
  
</table>

<h2>Edit A Car</h2>
<form action="/update" method="POST" class="form-horizontal">
  <div class="form-group">
    <label for="id" class="col-sm-2 control-label">ID</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="id" name="id" placeholder="Car ID">
    </div>
  </div>
  <div class="form-group">
    <label for="year" class="col-sm-2 control-label">Year</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="year" name="year" placeholder="Year">
    </div>
  </div>
  <div class="form-group">
    <label for="make" class="col-sm-2 control-label">Make</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="make" name="make"  placeholder="Make">
    </div>
  </div>
  <div class="form-group">
    <label for="model" class="col-sm-2 control-label">Model</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="model" name="model" placeholder="Model">
    </div>
  </div>
  <div class="form-group">
    <label for="engine" class="col-sm-2 control-label">Engine</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="engine" name="engine" placeholder="Engine">
    </div>
  </div>
  <div class="form-group">
    <label for="mileage" class="col-sm-2 control-label">Mileage</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="mileage" name="mileage" placeholder="Mileage">
    </div>
  </div>
  <div class="form-group">
    <label for="color" class="col-sm-2 control-label">Color</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="color" name="color" placeholder="Color">
      
    </div>
  </div>
  <div class="form-group">
    <label for="vin" class="col-sm-2 control-label">VIN</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="vin" name="vin" placeholder="VIN">
      
    </div>
  </div>
  <div class="form-group">
    <label for="condition" class="col-sm-2 control-label">Condition</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="condition" name="condition" placeholder="Condition">
      
    </div>
  </div>
  <div class="form-group">
    <label for="stockNumber" class="col-sm-2 control-label">Stock Number</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="stockNumber" name="stockNumber" placeholder="Stock Number">
      
    </div>
  </div>
  <div class="form-group">
    <label for="intakeDate" class="col-sm-2 control-label">Intake Date</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="intakeDate" name="intakeDate" placeholder="Intake Date">
      
    </div>
  </div>
  
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default">Edit Car</button>
    </div>
  </div>
</form>