    <li><a href="/">Home</a></li>
    <li class="active">Delete A Car</a></li>
</ol>

<br/>
<%- partial ('partials/statusmessage.ejs') %>
<h2>Car Inventory</h2>
<table class="table table-striped table-bordered">
  <tr>
    <th>ID</th>
    <th>Year</th>
    <th>Make</th>
    <th>Model</th>
    <th>Engine</th>
    <th>Mileage</th>
    <th>Color</th>
    <th>VIN</th>
    <th>Condition</th>
    <th>Stock Number</th>
    <th>Intake Date</th>
  </tr>
  <% if(typeof cars != "undefined" && cars.length > 0){ %>
    <% cars.forEach(function(cars){ %>
      <tr>
        <td><%= cars.id %></td>
        <td><%= cars.year %></td>
        <td><%= cars.make %></td>
        <td><%= cars.model %></td>
        <td><%= cars.engine %></td>
        <td><%= cars.mileage %></td>
        <td><%= cars.color %></td>
        <td><%= cars.vin %></td>
        <td><%= cars.condition %></td>
        <td><%= cars.stockNumber %></td>
        <td><%= cars.intakeDate %></td>
      </tr>
    <% }) %>
  <% }else{ %>
      <tr>
        <td colspan="10">0 records found</td>
      </tr>
  <% } %>
  
</table>


<h2>Delete A Car</h2>
<form action="/delete" method="POST" class="form-horizontal">
  <div class="form-group">
    <label for="id" class="col-sm-2 control-label">ID</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="id" name="id" placeholder="Car ID">
    </div>
  </div>
  
  
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default">Delete Car</button>
    </div>
  </div>
</form>